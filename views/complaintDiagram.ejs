<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <title>Profile page</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/static/complaintDiagram.css">
</head>
<body>
    <div class="container">
        <header>
            <%-include('./partials/header')%>
        </header>
        <main>
            <section class="complaints-section">
                <h2>Жалобы</h2>
                <canvas id="complaintsChart"></canvas>
            </section>
        </main>
    </div>

    <script>
        // Данные для диаграммы
        const data = {
            labels: ['Нерешенные', 'В процессе', 'Решенные'],
            datasets: [{
                label: 'Статусы жалоб',
                data: [5, 10, 2], // Пример данных
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        };

        // Конфигурация диаграммы
        const config = {
            type: 'pie', // Тип диаграммы: 'pie' для круговой
            data: data,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Диаграмма Жалоб'
                    }
                }
            },
        };

        // Инициализация диаграммы
        const complaintsChart = new Chart(
            document.getElementById('complaintsChart'),
            config
        );
    </script>
</body>
</html>
</body>
</html>