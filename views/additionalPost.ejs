<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/static/additional.css">
    <title>Home</title>
</head>
<body>
    <div class="container">
        <div class="content">
            <div class="wrap__header">
                <%-include('./partials/header')%>
            </div>
            <div class="wrap__main">
                <div class="main">
                    <div class="product-cards">
                        <div class="my_card">
                            <div class="left-sector">
                                <div class="inner__left-sector">
                                    <div class="wrap__image">
                                        <div class="image">
                                            <% if(post.image_url) { %>
                                                <img src="/postsImage/<%=post.image_url%>" class="product-image" aclt="image">
                                            <% } else { %>
                                                <img src="/defaultImage/1674310663_catherineasquithgallery-com-p-fon-vektornii-serii-foto-155.jpg" class="product-image" aclt="image">
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="right-sector">
                                <div class="inner__right-sector">
                                    <div class="title">
                                        <center><h4><%=post.title%></h4></center>
                                    </div>
                                </div>
                                <div class="body">
                                    <%=post.body%>
                                </div>
                            </div>
                        </div>
                        <div class="wrap__user-sector">
                            <div class="user-sector">
                                <div class="user">
                                    <div class="username">
                                        <a href="/profile/<%=user._id%>" class="a__user">
                                            <h3 class="name"><%=user.name%></h3>
                                        </a>
                                    </div>
                                    <% if(!user.avatar_url) { %>
                                        <div class="user-avatar">
                                            <img src="/defaultImage/user-xmark-alt-1-svgrepo-com.png" class="avatar" alt="User avatar">
                                        </div>
                                    <% } else { %>
                                        <div class="user-avatar">
                                            <img src="/userAvatarImage/<%=user.avatar_url%>" alt="User avatar">
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(() => {
            const innerLeftSectorHeight = $('.product-image').height()
            console.log(innerLeftSectorHeight)
            if(innerLeftSectorHeight < 100){
                
            }else{
                $('.right-sector').css({'max-height': `${innerLeftSectorHeight}px`})
            }
        })
    </script>
</body>
</html>